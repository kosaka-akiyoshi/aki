    function createRandomNumberArray():array
    {
        $randomArray =[];
        for ($count = 1; $count <= 10; $count++){
        $randomArray[] =rand(1,100);
        }
    return $randomArray;
    }
    echo("<pre>");
    $arr = createRandomNumberArray();
    var_dump($arr);
    echo("</pre>");
    

    
